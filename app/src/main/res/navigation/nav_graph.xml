<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.example.mehrdad_food_hub.Ui.Splash"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splash_to_welcome"
            app:destination="@id/welcome"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />
    </fragment>

    <fragment
        android:id="@+id/welcome"
        android:name="com.example.mehrdad_food_hub.Ui.Welcome"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcome_to_homeScreen"
            app:destination="@id/homeScreen"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />
        <action
            android:id="@+id/action_welcome_to_splash"
            app:destination="@id/splash"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />
    </fragment>

    <fragment
        android:id="@+id/homeScreen"
        android:name="com.example.mehrdad_food_hub.Ui.HomeScreen"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" >
        <action
            android:id="@+id/action_homeScreen_to_homeSubcategory"
            app:destination="@id/homeSubcategory"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_fade_in"
            app:popExitAnim="@anim/anim_fade_out">
            <argument
                android:name="categoryName"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_homeScreen_to_welcome"
            app:destination="@id/welcome"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />
        <action
            android:id="@+id/action_homeScreen_to_addProductToList"
            app:destination="@id/addProductToList"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />
    </fragment>

    <fragment
        android:id="@+id/homeSubcategory"
        android:name="com.example.mehrdad_food_hub.Ui.HomeSubcategory"
        android:label="fragment_home_subcategory"
        tools:layout="@layout/fragment_home_subcategory" >
        <argument
            android:name="categoryName"
            app:argType="string" />
        <action
            android:id="@+id/action_homeSubcategory_to_productPage"
            app:destination="@id/productPage"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />
        <action
            android:id="@+id/action_homeSubcategory_to_homeScreen"
            app:destination="@id/homeScreen"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />
    </fragment>

    <fragment
        android:id="@+id/productPage"
        android:name="com.example.mehrdad_food_hub.Ui.ProductPage"
        android:label="fragment_product_page"
        tools:layout="@layout/fragment_product_page" >
        <action
            android:id="@+id/action_productPage_to_productWarenkorb"
            app:destination="@id/productWarenkorb"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />
        <action
            android:id="@+id/action_productPage_to_homeScreen"
            app:destination="@id/homeScreen"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />
        <action
            android:id="@+id/action_productPage_to_homeSubcategory"
            app:destination="@id/homeSubcategory"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />
    </fragment>

    <fragment
        android:id="@+id/productWarenkorb"
        android:name="com.example.mehrdad_food_hub.Ui.ProductWarenkorb"
        android:label="fragment_product_warenkorb"
        tools:layout="@layout/fragment_product_warenkorb" >
        <action
            android:id="@+id/action_productWarenkorb_to_homeScreen"
            app:destination="@id/homeScreen"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />
        <action
            android:id="@+id/action_productWarenkorb_to_productPage"
            app:destination="@id/productPage"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />
    </fragment>

    <fragment
        android:id="@+id/addProductToList"
        android:name="com.example.mehrdad_food_hub.Ui.AddProductToList"
        android:label="fragment_add_product_to_list"
        tools:layout="@layout/fragment_add_product_to_list" >
        <action
            android:id="@+id/action_addProductToList_to_homeScreen2"
            app:destination="@id/homeScreen"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />
    </fragment>
</navigation>
